<%= form_for(@todo, remote: true) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :priority %><br />
    <%= f.select(:priority, options_for_select([['high', 'high'], ['medium', 'medium'], ['low', 'low']], 3)) %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :completed %><br />
    <%= f.check_box :completed %>
  </div>
  <div class="field">
    <%= f.label :Tasklist %><br />
    <%= f.collection_select :Tasklist_id, Tasklist.all, :id, :title%>
  </div>
  <div class="actions" id="todo-submit">
    <%= f.submit id="btn-submit"%>
  </div>
<% end %>



<h1 id="title">Listing todos</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Priority</th>
    <th>Description</th>
    <th>Completed</th>
    <th>Tasklist</th>
  </tr>
<% @todos.each do |todo| %>
  <tr class="row">

    <td><%= todo.id %></td>
    <td><%= todo.title %></td>
    <td><%= todo.priority %></td>
    <td><%= todo.description %></td>
    <td><%= todo.completed %></td>
    <td ><%= todo.Tasklist.title %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

