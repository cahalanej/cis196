<h1 id="title">Listing todos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Priority</th>
    <th>Description</th>
    <th>Completed</th>
    <th>Tasklist</th>
  </tr>

<% @todos.high_priority.each do |todo| %>
  <tr class="row">
    <td><%= todo.title %></td>
    <td><%= todo.priority %></td>
    <td><%= todo.description %></td>
    <td><%= todo.completed %></td>
    <td><%= todo.Tasklist.title %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

